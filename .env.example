# Weave-NN Environment Configuration
# Copy this file to .env and update with your values
# WARNING: Never commit .env to version control!

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================
ENVIRONMENT=development  # development, staging, production
LOG_LEVEL=info          # debug, info, warning, error, critical

# ============================================================================
# SERVICE PORTS
# ============================================================================
API_PORT=8000
MCP_PORT=8001
RABBITMQ_PORT=5672
RABBITMQ_MANAGEMENT_PORT=15672
REDIS_PORT=6379
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443
GRAFANA_PORT=3000

# ============================================================================
# RABBITMQ CONFIGURATION
# ============================================================================
RABBITMQ_USER=weave
RABBITMQ_PASS=weave_secret_change_in_production
RABBITMQ_VHOST=/

# ============================================================================
# REDIS CONFIGURATION
# ============================================================================
REDIS_PASSWORD=
REDIS_DB=0

# ============================================================================
# API AUTHENTICATION (Optional - for production)
# ============================================================================
API_SECRET_KEY=your-secret-key-change-in-production-min-32-chars
API_ACCESS_TOKEN_EXPIRE_MINUTES=30
API_REFRESH_TOKEN_EXPIRE_DAYS=7

# ============================================================================
# MCP SERVER CONFIGURATION
# ============================================================================
MCP_MAX_AGENTS=10
MCP_AGENT_TIMEOUT=300
MCP_ENABLE_METRICS=true

# ============================================================================
# MONITORING (Grafana)
# ============================================================================
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin_change_in_production

# ============================================================================
# CORS SETTINGS (for development)
# ============================================================================
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
CORS_ALLOW_CREDENTIALS=true

# ============================================================================
# DATABASE (if adding PostgreSQL later)
# ============================================================================
# DATABASE_URL=postgresql://user:pass@localhost:5432/weave_nn
# DATABASE_POOL_SIZE=10
# DATABASE_MAX_OVERFLOW=20

# ============================================================================
# EXTERNAL SERVICES (Optional)
# ============================================================================
# ANTHROPIC_API_KEY=sk-ant-...
# OPENAI_API_KEY=sk-...
# GITHUB_TOKEN=ghp_...

# ============================================================================
# DOCKER BUILD ARGUMENTS
# ============================================================================
PYTHON_VERSION=3.12
NODE_VERSION=20

# ============================================================================
# FEATURE FLAGS
# ============================================================================
ENABLE_SWAGGER_UI=true
ENABLE_REDOC=true
ENABLE_METRICS=true
ENABLE_RATE_LIMITING=true

# ============================================================================
# PERFORMANCE TUNING
# ============================================================================
WORKERS=4
MAX_CONNECTIONS=1000
KEEPALIVE_TIMEOUT=65
