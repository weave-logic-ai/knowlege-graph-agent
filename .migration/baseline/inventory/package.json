{
  "name": "@weave-nn/weaver",
  "version": "0.1.0",
  "description": "Unified MCP server + workflow orchestrator for Weave-NN knowledge graph",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "weaver-mcp": "./dist/mcp-server/cli.js",
    "weaver": "./dist/cli/bin.js"
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "clean": "rm -rf dist",
    "generate-spec": "tsx scripts/generate-phase-spec.ts",
    "sync-tasks": "tsx scripts/sync-tasks.ts",
    "sync-tasks-ai": "tsx scripts/sync-tasks-ai.ts",
    "sync-tasks-simple": "tsx scripts/sync-tasks-simple.ts",
    "validate-spec": "tsx scripts/validate-spec.ts",
    "sop:feature-plan": "tsx scripts/sops/feature-planning.ts",
    "sop:phase-plan": "tsx scripts/sops/phase-planning.ts",
    "sop:release": "tsx scripts/sops/release-management.ts",
    "sop:debug": "tsx scripts/sops/debugging.ts",
    "sop:docs": "tsx scripts/sops/documentation.ts",
    "sop:vault": "tsx scripts/sops/vault-management.ts",
    "sop:review": "tsx scripts/sops/code-review.ts",
    "sop:perf": "tsx scripts/sops/performance-analysis.ts",
    "graph:analyze": "tsx ../weave-nn/scripts/graph-tools/analyze-graph.ts ../weave-nn",
    "graph:orphans": "tsx ../weave-nn/scripts/graph-tools/find-orphans.ts",
    "graph:suggest": "tsx ../weave-nn/scripts/graph-tools/suggest-connections.ts",
    "graph:viz": "tsx ../weave-nn/scripts/graph-tools/visualize-graph.ts",
    "graph:all": "bash ../weave-nn/scripts/graph-tools/run-analysis.sh"
  },
  "keywords": [
    "weave-nn",
    "knowledge-graph",
    "mcp",
    "workflow",
    "obsidian"
  ],
  "author": "Weave-NN WeaveLogic",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.32.0",
    "@hono/node-server": "^1.13.7",
    "@modelcontextprotocol/sdk": "^1.20.2",
    "@xenova/transformers": "^2.17.2",
    "better-sqlite3": "^11.7.0",
    "boxen": "^8.0.1",
    "chalk": "^5.3.0",
    "chokidar": "^4.0.3",
    "commander": "^14.0.1",
    "dotenv": "^16.4.7",
    "execa": "^9.6.0",
    "fast-glob": "^3.3.3",
    "gray-matter": "^4.0.3",
    "handlebars": "^4.7.8",
    "hono": "^4.6.15",
    "ignore": "^7.0.5",
    "inquirer": "^12.3.0",
    "js-yaml": "^4.1.0",
    "ora": "^8.1.1",
    "pm2": "^6.0.13",
    "simple-git": "^3.28.0",
    "uuid": "^11.0.3",
    "workflow": "^1.0.1",
    "yaml": "^2.8.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.12",
    "@types/handlebars": "^4.1.0",
    "@types/inquirer": "^9.0.7",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^22.10.2",
    "@types/uuid": "^11.0.0",
    "@typescript-eslint/eslint-plugin": "^8.19.1",
    "@typescript-eslint/parser": "^8.19.1",
    "eslint": "^9.17.0",
    "playwright": "^1.49.1",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  },
  "engines": {
    "node": ">=20.0.0",
    "bun": ">=1.0.0"
  },
  "packageManager": "bun@1.3.1"
}
