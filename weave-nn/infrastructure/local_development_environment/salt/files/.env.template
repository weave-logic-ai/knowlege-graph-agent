# Weave-NN Environment Configuration Template
# Copy this file to .env and fill in your values

# ===========================
# Obsidian Local REST API
# ===========================
# Generate API key in Obsidian: Settings → Local REST API → Generate Token
OBSIDIAN_API_KEY=your-api-key-here
OBSIDIAN_API_URL=https://localhost:27124

# ===========================
# Claude API
# ===========================
# Get from: https://console.anthropic.com/settings/keys
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# ===========================
# RabbitMQ Configuration
# ===========================
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=admin
RABBITMQ_PASSWORD=changeme
RABBITMQ_VHOST=/
RABBITMQ_EXCHANGE=weave-nn.events

# ===========================
# N8N Configuration
# ===========================
N8N_HOST=localhost
N8N_PORT=5678
N8N_USERNAME=admin
N8N_PASSWORD=changeme

# ===========================
# Git Configuration
# ===========================
GIT_AUTO_COMMIT_ENABLED=true
GIT_COMMIT_DEBOUNCE_SECONDS=300
GIT_USER_NAME="Your Name"
GIT_USER_EMAIL="your.email@example.com"

# ===========================
# MCP Server Configuration
# ===========================
MCP_HOST=localhost
MCP_PORT=8000
MCP_LOG_LEVEL=INFO

# ===========================
# File Watcher Configuration
# ===========================
WATCHER_VAULT_PATH=/home/developer/weave-nn
WATCHER_DEBOUNCE_SECONDS=5
WATCHER_IGNORE_PATTERNS=.git,.obsidian/workspace.json,.obsidian/cache

# ===========================
# Shadow Cache Configuration
# ===========================
SHADOW_CACHE_DB_PATH=/home/developer/weave-nn/.obsidian/plugins/weave-nn/shadow-cache.db
SHADOW_CACHE_SYNC_INTERVAL_SECONDS=60

# ===========================
# Agent Configuration
# ===========================
AGENT_RULES_PATH=/home/developer/weave-nn/.claude-flow/rules
AGENT_LOG_LEVEL=INFO

# ===========================
# Project Settings
# ===========================
PROJECT_NAME=weave-nn
LOG_LEVEL=INFO
DEBUG=false
