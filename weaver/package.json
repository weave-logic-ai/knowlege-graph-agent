{
  "name": "@weave-nn/weaver",
  "version": "0.1.0",
  "description": "Unified MCP server + workflow orchestrator for Weave-NN knowledge graph",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "clean": "rm -rf dist",
    "generate-spec": "tsx scripts/generate-phase-spec.ts",
    "sync-tasks": "tsx scripts/sync-tasks.ts"
  },
  "keywords": [
    "weave-nn",
    "knowledge-graph",
    "mcp",
    "workflow",
    "obsidian"
  ],
  "author": "Weave-NN WeaveLogic",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.32.0",
    "@hono/node-server": "^1.13.7",
    "@modelcontextprotocol/sdk": "^1.0.4",
    "better-sqlite3": "^11.7.0",
    "chokidar": "^4.0.3",
    "dotenv": "^16.4.7",
    "hono": "^4.6.15",
    "simple-git": "^3.27.0",
    "workflow": "^1.0.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.12",
    "@types/node": "^22.10.2",
    "@typescript-eslint/eslint-plugin": "^8.19.1",
    "@typescript-eslint/parser": "^8.19.1",
    "eslint": "^9.17.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  },
  "engines": {
    "node": ">=20.0.0",
    "bun": ">=1.0.0"
  },
  "packageManager": "bun@1.3.1"
}
